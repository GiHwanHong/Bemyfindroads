<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/IdInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/pInput"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_main_edit_text"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="아이디"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/pInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/IdInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_main_edit_text"
        android:drawableLeft="@drawable/ic_security"
        android:drawablePadding="10dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/pInput"
        android:layout_below="@+id/pInput"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_login_button"
        android:onClick="Btn_main"
        android:text="로그인"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_login_button"
        android:onClick="Btn_main"
        android:text="회원가입"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_alignEnd="@+id/pInput" />



</RelativeLayout>
